{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-react-hooks",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "jsRules": {
        "no-unused-expression": true
    },
    "rules": {
        "prettier":  true,
        "no-console": false,
        "react-hooks-nesting": "error",
        "eofline": false,
        "quotemark": [
            true,
            "single"
        ],
        "indent": false,
        "member-access": [
            false
        ],
        "ordered-imports": true,
        "max-line-length": [
            true,
            150
        ],
        "member-ordering": [
            false
        ],
        "curly": false,
        "interface-name": [
            false
        ],
        "array-type": [
            false
        ],
        "no-empty-interface": false,
        "no-empty": false,
        "arrow-parens": false,
        "object-literal-sort-keys": false,
        "no-unused-expression": false,
        "max-classes-per-file": [
            false
        ],
        "variable-name": [
            false
        ],
        "one-line": [
            false
        ],
        "one-variable-per-declaration": [
            false
        ],
        "jsx-no-multiline-js": false
    },
    "rulesDirectory": []
}